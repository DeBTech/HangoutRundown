#HangDownContent(ng-app='HangDown', ng-controller="HangDownListCntr")
  header#HangDownHeader
    h1 HangDown
  
  ul#HangDownTopics(ui-sortable='itemSortConfig', ng-model='items')
    li(ng-repeat="item in items", ng-class="{ active: (activeItem == $index), past: (activeItem > $index) }")
      p.title {{item.label}}
      p.creator {{item.creator}}

  footer#HangDownControls
    #HangDownButtons
      button(ng-click="regressTopic()") Regress
      button(ng-click="advanceTopic()") Advance
    form(ng-submit="addNewTopic()")
      input(ng-model="newTopicBuffer")
      button(ng-click="addNewTopic()", type="submit") Add