li.past
  color: lightgray

li.active
  color: red

#HangDownTopics li
  list-style-type: none
  margin-left: -1em
  cursor: pointer

#HangDownTopics p.title
  font-weight: bold
  font-size: 110%
  margin-bottom: 0px

#HangDownTopics p.creator
  font-size: 70%
  background-color: navy
  color: lightgray
  margin-left: 1em
  display: inline-block
  padding: 2px 8px
  border-radius: 5px

#HangDownContent
  min-height: 100% !important
  height: 100% !important
  width: 100% !important
  min-width: 100% !important
  position: absolute

#HangDownHeader
  height: 4em
  position: absolute
  top 0

#HangDownHeader h1
  font-size: 1em

#HangDownTopics
  position: absolute
  top: 4em
  bottom: 100px
  overflow-y: scroll
  width: 100%

#HangDownControls
  height: 100px
  position: absolute
  bottom: 0